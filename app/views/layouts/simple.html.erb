<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <title><%= h(yield(:title) || "Repozytorium") %></title>
		<%= stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes' %>
		<%= javascript_include_tag :all %>
		<script>$j = jQuery.noConflict();</script>		
        <%= yield(:head) %>
    </head>
    <body>
    <div id="user_data">
    	<% if current_user %>
		UÅ¼ytkownik: <%= link_to current_user.username, account_path %> (<%= link_to "Wyloguj", logout_path %>)
   		<% else %>
		<%= link_to "Rejestracja", register_path %> <%= link_to "Logowanie", login_path %>
		<% end %>
	</div>
    <div id="logo">	
       		<%= link_to image_tag("/images/logo.jpg"), root_path %>
	</div>
	<br />
    <div id="container">
		<%- flash.each do |name, msg| -%>
        	<%= content_tag :div, msg, :id => "flash_#{name}" %>
            <%- end -%>			
            <%- if show_title? -%>
            	<h1><% h yield(:title) %></h1>
            <%- end -%>
            <%= yield %>
    </div>
    </body>
</html>
