<h1>Nowa usługa</h1>

<% form_for(@service) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Nazwa %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Opis %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :input %><br />
    <%= f.text_field :input %>
  </p>
  <p>
    <%= f.label :output %><br />
    <%= f.text_field :output %>
  </p>
  <p>
    <%= f.submit 'Stwórz usługę' %>
  </p>
<% end %>